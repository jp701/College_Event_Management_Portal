
@{
    ViewData["Title"] = "Student Home";
}
<div style="background-color:mistyrose;width:1000px;margin:auto;">
    <h2 class="text-center">Welcome to @ViewData["Title"]..!!</h2>
</div>


<div id="ss" class="carousel slide center" data-ride="carousel">

    <!--Carousel-Indicators-->
    <ul class="carousel-indicators">
        <li data-target="#ss" data-slide-to="0" class="active"></li>
        <li data-target="#ss" data-slide-to="1"></li>
        <li data-target="#ss" data-slide-to="2"></li>
    </ul>

    <!--Slide-show-->
    <div class="carousel-inner" style="text-align: center;">
        <div class="carousel-item active">
            <img src="~/images/event5.jpg" alt="Freshers Party">
            <div class="carousel-caption text-light">
                <h3>Freshers Party</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/event9.jpg" alt="Seminar">
            <div class="carousel-caption text-light">
                <h3>Seminar</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/event17.jpg" alt="Cultural Festival">
            <div class="carousel-caption text-light">
                <h3>Cultural Festival</h3>
            </div>
        </div>
    </div>

    <!--Data slide controls: Left & Right-->
    <a class="carousel-control-prev" href="#ss" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#ss" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>
<br /><br />

<div class="container">
    <a asp-action="ViewEvents" class="btn btn-primary btn-block mx-auto" style="width:1000px;" role="button">Join Events</a><br />
    <a asp-action="RegEvents" class="btn btn-primary btn-block mx-auto" style="width:1000px;" role="button">View Registered Events</a><br />
    <a asp-action="Manage" asp-controller="Identity/Account" class="btn btn-primary btn-block mx-auto" style="width:1000px;" role="button">Manage Profile</a>
    <br />
</div>