@using Microsoft.AspNetCore.Identity
@using CoreApplication2.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                    <i class="fa fa-user-circle" style="font-size:20px;"></i> Hello @UserManager.GetUserName(User)!
                </a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link">
                    <i class="fa fa-sign-out" style="font-size:20px"></i> Logout
                </button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                <i class="fa fa-user-circle" style="font-size:20px;"></i> Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                 <i class="fa fa-sign-in" style="font-size:20px"></i> Login
            </a>
        </li>
    </ul>
}