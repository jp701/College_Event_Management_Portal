@model CreateRoleViewModel

@{
    ViewData["Title"] = "CreateRole";
}

<h2>Create A New Role</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole" method="post" class="mt-3">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control" placeholder="Name" required/>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Create Role</button>
        </form>
    </div>
</div>

